<h1 class="text-center">Login to Heap-Flood</h1>

<div class="form-group">
  <%= form_tag login_path do %>
  <%= label_tag :email %>
  <%= text_field_tag :email %>
  <%= label_tag :password %>
  <%= password_field_tag :password%>
  <%= submit_tag 'Login!', :class => 'btn btn-default' %>
<% end %>
</div>
